<h1>Categorias: </h1>
{{#each categorias}}
    <div class = "card mt-3">
        <div class = "card-body">
            <a href="/categories/{{nome}}"><h4>{{nome}}</h4></a>
            <form action="/deletcategoria" method = "POST">
                <input type="hidden" name = "id" value = "{{_id}}">
                <input type="hidden" name = "nome" value = "{{nome}}">
                <button type = "submit" class = "btn btn-danger mt-3">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h3>Nenhuma categoria foi criada</h3>
{{/each}}
